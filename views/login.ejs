<main>
  <section class="section-login">
    <div class="container">
      <div class="block-login">
        <p class="text-login-title">Вход</p>
        <div class="block-input">
          <form action="/login" method="POST" class="block-input">
            <input type="text" placeholder="логин" class="input-login" name="mail" value="<%= oldInput?.mail || '' %>">
            <% if (errors?.mail) { %>
              <p class="error-message">
                <%= errors.mail.msg %>
              </p>
              <% } %>
                <input type="password" placeholder="пароль" class="input-login" name="password">
                <% if (errors?.password) { %>
                  <p class="error-message">
                    <%= errors.password.msg %>
                  </p>
                  <% } %>
                    <a href="/profile/check-user">
                      <p class="text-login right"><span>Забыли пароль?</span></p>
                    </a>
                    <input type="submit" class="button-login" value="Войти">
          </form>
        </div>
        <p class="text-login">У вас нет аккаунта? <span><a href="register">Зарегистрируйтесь</a></span></p>
      </div>
    </div>
  </section>
</main>