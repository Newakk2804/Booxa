<header>
  <div class="nav">
    <div class="nav__items">
      <div class="nav__logo">
        <a href="/"><img src="/img/logo.png" alt=""></a>
      </div>
      <div class="nav__menu">
        <ul class="menu__items">
          <a href="/contact">
            <li class="item">
              Контакты
            </li>
          </a>
          <a href="/about">
            <li class="item">
              О нас
            </li>
          </a>
          <a href="/delivery">
            <li class="item">
              Доставка
            </li>
          </a>
        </ul>
      </div>
      <div class="nav__button">
        <ul class="menu__buttons">
          <li class="buttons__item">
            <% if (user && user.role==='admin' ) { %>
            <a href="/basket" style="display: none;"><img src="/img/card.svg" alt="" style="display: none;"></a>
              <span class="cart-count" id="basket-counter" style="display: none;">
                0
              </span>
              <% } else { %>
                <a href="/basket"><img src="/img/card.svg" alt=""></a>
                <span class="cart-count" id="basket-counter">
                  0
                </span>
                <% } %>
          </li>
          <li class="buttons__item">
            <button onclick="togglePanel()">
              <% if (user) { %>
                <img src="/<%= user.imageUrl %>" alt="">
                <% } else { %>
                  <img src="/img/profile.svg" alt="">
                  <% } %>
            </button>
          </li>
        </ul>
      </div>
    </div>
  </div>
</header>
<div class="slide-panel-header" id="slide-panel">
  <% if (user) { %>
    <a href="/profile" class="slide-panel-link">
      <p>Личный кабинет</p>
    </a>
    <a href="/logout" class="slide-panel-link">
      <p>Выйти</p>
    </a>
    <% } else { %>
      <a href="/login" class="slide-panel-link">
        <p>Войти</p>
      </a>
      <a href="/register" class="slide-panel-link">
        <p>Регистрация</p>
      </a>
      <% } %>
</div>